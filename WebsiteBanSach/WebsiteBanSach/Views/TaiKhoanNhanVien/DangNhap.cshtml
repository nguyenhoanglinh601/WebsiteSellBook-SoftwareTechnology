@model WebsiteBanSach.Models.ViewModel.TaiKhoanDangNhap

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_LayoutNV";
}

<div class="row justify-content-center">
    <div style="border: 1px solid #A9A9A9; border-radius:10px;" class="col-md-4">
        <div class="row justify-content-center">
            <h1>Đăng nhập</h1>
        </div>
        <hr />
        <form asp-controller="TaiKhoanNhanVien" asp-action="dangNhap">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Mã nhân viên</label>
                @*<input asp-for="taiKhoan" class="form-control" />*@
                <input type="text" class="form-control" name="taiKhoan" value="1" />
                <span asp-validation-for="taiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="matKhau" class="control-label"></label>
                @*<input type="password" asp-for="matKhau" class="form-control" />*@
                <input type="password" class="form-control" name="matKhau" value="123" />
                <span asp-validation-for="matKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <div class="row justify-content-center">
                        <p class="p-2" style="color:red;">@ViewData["thongBao"]</p>
                        <p class="p-2" style="color:red;">@ViewData["ThongDiepDangNhapLoi"]</p>
                    </div>
                    <div class="row justify-content-center">
                        <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
