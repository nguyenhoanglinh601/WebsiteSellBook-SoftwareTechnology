@model WebsiteBanSach.Models.ViewModel.GioHang

@{
    ViewData["Title"] = "Đặt hàng";
    decimal tongTien = 0;
}

<h1>Đặt hàng</h1>

<h4>Thông tin đặt hàng</h4>

<div class="row">
    <form class="col-md-12" asp-controller="DonHang" asp-action="datHang">
        <div class="col-md-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label name="diaChiGiaoHang" class="control-label">Địa chỉ giao hàng</label>
                <input name="diaChiGiaoHang" class="form-control" />
            </div>
            <div class="form-group">
                <label name="soDienThoai" class="control-label">Số điện thoại</label>
                <input name="soDienThoai" class="form-control" />
            </div>
            <br />
        </div>
        <h1>Giỏ hàng</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tên sách
                    </th>
                    <th>
                        Loại sách
                    </th>
                    <th>
                        NXB
                    </th>
                    <th>
                        Số lượng
                    </th>
                    <th>
                        Giá Bán
                    </th>
                    <th>
                        Thành tiền
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.tapHopSanPham)
                {
                    var x = @item.sach.giaBan * @item.soLuong;
                    <tr>
                        <td>
                            @item.sach.ten
                        </td>
                        <td>
                            @foreach (var loaiSach in Model.tapHopLoaiSach)
                            {
                                if (item.sach.maLoai == loaiSach.idLoai)
                                {
                                    @loaiSach.tenLoai
                                }
                            }
                        </td>
                        <td>
                            @foreach (var NXB in Model.danhSachNXB)
                            {
                                if (item.sach.idNhaXuatBan == NXB.idNhaXuatBan)
                                {
                                    @NXB.ten
                                }
                            }
                        </td>
                        <td>
                            @item.soLuong
                        </td>
                        <td>
                            @item.sach.giaBan đ
                        </td>
                        <td>
                            <p>@x đ</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        @foreach (var item in Model.tapHopSanPham)
        {
            tongTien = tongTien + item.sach.giaBan * item.soLuong;
        }
        <br /><br />
        <div class="form-group">
            <input type="submit" value="Đặt hàng" class="btn btn-primary" />
        </div>
    </form>
</div>
