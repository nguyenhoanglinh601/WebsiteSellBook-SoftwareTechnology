@model IEnumerable<WebsiteBanSach.Models.LoaiSach>

@{
    string level1 = "donhang-thongkedonhang-Trang chủ;";
    string level2 = "Thống kê loại sách;";
    string Navigation = level1 + level2;
    ViewBag.Navigation = Navigation;

    ViewData["Title"] = "Thống kê loại sách";
    Layout = "_LayoutNV";
}

<h1>Thống kê loại sách</h1>

<p>
    <a class="btn btn-success" asp-action="themLoaiSach">Thêm loại sách</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tenLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moTa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tenLoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.moTa)
                </td>
                <td style="text-align: right;">
                    <a class="btn btn-primary" asp-action="suaLoaiSach" asp-route-id="@item.idLoai">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
