@model WebsiteBanSach.Models.ViewModel.TaiKhoanDangKiKhachHang

@{
    ViewData["Title"] = "Đăng kí";
}

<h1>Đăng kí</h1>

<h4>Thông tin cá nhân</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="TaiKhoanKhachHang" asp-action="xacNhanDangKi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6 float-left">
                <label asp-for="@Model.taiKhoanKhachHang.tenKhachHang" class="control-label"></label>
                <input asp-for="@Model.taiKhoanKhachHang.tenKhachHang" class="form-control" />
                <span asp-validation-for="@Model.taiKhoanKhachHang.tenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 float-left">
                <label asp-for="@Model.taiKhoanKhachHang.ngaySinh" class="control-label"></label>
                <input asp-for="@Model.taiKhoanKhachHang.ngaySinh" class="form-control" />
                <span asp-validation-for="@Model.taiKhoanKhachHang.ngaySinh" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 float-left">
                <label asp-for="@Model.taiKhoanKhachHang.gioiTinh" class="control-label"></label><br />
                @foreach (string gioiTinh in new[] { "Nam", "Nữ", "Khác" })
                {
                    <input type="radio" asp-for="@Model.taiKhoanKhachHang.gioiTinh" value="@gioiTinh" />@gioiTinh
                }
                <span asp-validation-for="@Model.taiKhoanKhachHang.gioiTinh" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 float-left">
                <label asp-for="@Model.taiKhoanKhachHang.soDienThoai" class="control-label"></label>
                <input asp-for="@Model.taiKhoanKhachHang.soDienThoai" class="form-control" />
                <span asp-validation-for="@Model.taiKhoanKhachHang.soDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 float-left">
                <label asp-for="@Model.taiKhoanKhachHang.diaChi" class="control-label"></label>
                <input asp-for="@Model.taiKhoanKhachHang.diaChi" class="form-control" />
                <span asp-validation-for="@Model.taiKhoanKhachHang.diaChi" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 float-left">
                <label asp-for="@Model.taiKhoanKhachHang.taiKhoan" class="control-label"></label>
                <input asp-for="@Model.taiKhoanKhachHang.taiKhoan" class="form-control" />
                <span asp-validation-for="@Model.taiKhoanKhachHang.taiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 float-left">
                <label asp-for="@Model.taiKhoanKhachHang.matKhau" class="control-label"></label>
                <input type="password" asp-for="@Model.taiKhoanKhachHang.matKhau" class="form-control" />
                <span asp-validation-for="@Model.taiKhoanKhachHang.matKhau" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 float-left">
                <label class="control-label">Xác nhận mật khẩu</label>
                <input type="password" asp-for="@Model.xacNhanMatKhau" class="form-control" />
                <span asp-validation-for="@Model.xacNhanMatKhau" class="text-danger"></span>
            </div>
            <p class="ml-3" style="color:red;">@ViewData["ThongDiepThemTaiKhoanLoi"]</p>
            <p class="ml-3" style="color:red;">@ViewData["ThongDiepLoiDangKi"]</p>
            <div class="form-group">
                <div style="margin-left: 14px;" class="row">
                    <input type="submit" value="Đăng kí" class="btn btn-primary" />
                    <a style="margin-left: 5px;" href="./dangKi" class="btn btn-primary">Tải lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
